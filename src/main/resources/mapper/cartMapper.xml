<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 사용자 ID로 장바구니 조회 -->
<mapper namespace="com.shoppingShop.mapper.CartMapper">

    <select id="selectCartByUserId" resultType="com.shoppingShop.domain.CartDto">
        SELECT *
        FROM cart
        WHERE user_id = #{userId}
    </select>

    <insert id="insertCart" parameterType="com.shoppingShop.domain.CartDto">
        INSERT INTO cart (user_id, product_id, quantity, created_at)
        VALUES (#{userId}, #{productId}, #{quantity}, NOW())
    </insert>

    <delete id="deleteCart" parameterType="long">
        DELETE FROM cart
        WHERE cart_id = #{cartId}
    </delete>
</mapper>

