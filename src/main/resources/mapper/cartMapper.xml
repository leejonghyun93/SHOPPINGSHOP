<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoppingShop.dao.CartMapper">

    <!-- 장바구니에 상품 추가 -->
    <insert id="addCart" parameterType="com.shoppingShop.domain.CartDto">
        INSERT INTO cart (user_id, pro_id, pro_name, pro_price, pro_color, pro_size, quantity)
        VALUES (#{userId}, #{proId}, #{proName}, #{proPrice}, #{proColor}, #{proSize}, #{quantity});
    </insert>

    <!-- 사용자 ID로 장바구니 목록 조회 -->
    <select id="getCartByUserId" resultType="com.shoppingShop.domain.CartDto">
        SELECT * FROM cart WHERE user_id = #{userId};
    </select>

    <!-- 장바구니에서 상품 삭제 -->
    <delete id="deleteCart" parameterType="long">
        DELETE FROM cart WHERE cart_id = #{cartId};
    </delete>

</mapper>