<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoppingShop.dao.CartMapper">

    <!-- Cart 추가 -->
    <insert id="addCart" parameterType="com.shoppingShop.domain.CartDto">
        INSERT INTO cart (user_id, product_id, quantity)
        VALUES (#{userId}, #{productId}, #{quantity})
    </insert>

    <!-- 특정 유저의 Cart 가져오기 -->
    <select id="getCartByUserId" parameterType="string" resultType="com.shoppingShop.domain.CartDto">
        SELECT *
        FROM cart
        WHERE user_id = #{userId}
    </select>

    <!-- Cart 삭제 -->
    <delete id="deleteCart" parameterType="long">
        DELETE FROM cart
        WHERE cart_id = #{cartId}
    </delete>

</mapper>